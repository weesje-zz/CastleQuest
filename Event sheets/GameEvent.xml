<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>GameEvent</name>
    <events>
        <event-block>
            <conditions>
                <condition id="0" name="On collision with another object" type="player">
                    <param id="0" name="Object">door</param>
                </condition>
            </conditions>
            <actions>
                <action id="0" name="Set text" type="Text">
                    <param id="0" name="Text">&quot;Entering door nr &quot;  &amp; door.nr</param>
                </action>
                <action id="-3" name="Set position" type="Text">
                    <param id="0" name="X">scrollx</param>
                    <param id="1" name="Y">scrolly</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-1" name="Every tick" type="System" />
            </conditions>
            <actions />
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-8" name="Compare two values" type="System">
                            <param id="0" name="First value">abs(Player.prevX - Player.X)</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Second value">10</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-3" name="Set position" type="eraser">
                            <param id="0" name="X">Player.X</param>
                            <param id="1" name="Y">Player.Y</param>
                        </action>
                        <action id="4" name="Paste Object" type="Canvas_fog">
                            <param id="0" name="object">eraser</param>
                        </action>
                        <action id="-10" name="Set value" type="player">
                            <param id="0" name="Instance variable">prevX</param>
                            <param id="1" name="Value">Player.X</param>
                        </action>
                        <action id="-10" name="Set value" type="player">
                            <param id="0" name="Instance variable">prevY</param>
                            <param id="1" name="Value">Player.Y</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-8" name="Compare two values" type="System">
                            <param id="0" name="First value">abs(Player.prevY - Player.Y)</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Second value">10</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-3" name="Set position" type="eraser">
                            <param id="0" name="X">Player.X</param>
                            <param id="1" name="Y">Player.Y</param>
                        </action>
                        <action id="4" name="Paste Object" type="Canvas_fog">
                            <param id="0" name="object">eraser</param>
                        </action>
                        <action id="-10" name="Set value" type="player">
                            <param id="0" name="Instance variable">prevX</param>
                            <param id="1" name="Value">Player.X</param>
                        </action>
                        <action id="-10" name="Set value" type="player">
                            <param id="0" name="Instance variable">prevY</param>
                            <param id="1" name="Value">Player.Y</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
    </events>
</c2eventsheet>
